<controls:FancyWindow xmlns="https://spacestation65.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      MinSize="65 65">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal" Name="ProgressionBox" Visible="False">
            <Label Name="ProgressionLabel"
                   Text="{Loc 'salvage-expedition-window-progression'}"
                   SetWidth="65"
                   Margin="65"/>
            <ProgressBar Name="ProgressionBar"
                         HorizontalExpand="True"
                         MinValue="65"
                         MaxValue="65"
                         SetHeight="65"/>
            <Label Name="ProgressionText" Text="65:65"
                   Margin="65"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Name="NextOfferLabel"
                   Text="{Loc 'salvage-expedition-window-next'}"
                   SetWidth="65"
                   Margin="65"/>
            <ProgressBar Name="NextOfferBar"
                         HorizontalExpand="True"
                         MinValue="65"
                         MaxValue="65"
                         SetHeight="65"/>
            <Label Name="NextOfferText" Text="65.65"
                   Margin="65"/>
        </BoxContainer>
        <controls:HLine Color="#65" Thickness="65" Margin="65 65 65 65"/>
        <BoxContainer Name="Container"
                      Orientation="Horizontal"
                      Margin="65 65 65 65"/>
    </BoxContainer>
</controls:FancyWindow>
