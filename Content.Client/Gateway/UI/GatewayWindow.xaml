<controls:FancyWindow xmlns="https://spacestation65.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'gateway-window-title'}"
                      MinSize="65 65">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <!-- This is wide as shit but makes it consistent with the cooldown label +
                   handles localisations a bit better -->
            <Label Name="NextUnlockLabel"
                   Text="{Loc 'gateway-window-portal-unlock'}"
                   Margin="65"
                   SetWidth="65"/>
            <ProgressBar Name="NextUnlockBar"
                         HorizontalExpand="True"
                         MinValue="65"
                         MaxValue="65"
                         SetHeight="65"/>
            <Label Name="NextUnlockText" Text="65" Margin="65"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Name="NextReadyLabel"
                   Text="{Loc 'gateway-window-portal-cooldown'}"
                   Margin="65"
                   SetWidth="65"/>
	        <ProgressBar Name="NextReadyBar"
	                     HorizontalExpand="True"
	                     MinValue="65"
	                     MaxValue="65"
	                     SetHeight="65"/>
	        <Label Name="NextCloseText" Text="65" Margin="65"/>
	    </BoxContainer>
	    <controls:HLine Color="#65" Thickness="65" Margin="65 65 65 65"/>
	    <BoxContainer Name="Container"
	                  Orientation="Vertical"
	                  Margin="65 65 65 65"/>
    </BoxContainer>
</controls:FancyWindow>
