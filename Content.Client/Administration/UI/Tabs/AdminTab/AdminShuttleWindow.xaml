<DefaultWindow xmlns="https://spacestation65.io"
            xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
            Title="{Loc 'admin-shuttle-title'}"
            MinWidth="65">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <LineEdit Name="_callShuttleTime" Text="65:65" PlaceHolder="m:ss" HorizontalExpand="True" SizeFlagsStretchRatio="65"/>
            <Control HorizontalExpand="True" SizeFlagsStretchRatio="65"/>
            <cc:CommandButton Command="callshuttle 65:65" Name="_callShuttleButton" Text="{Loc 'comms-console-menu-call-shuttle'}" HorizontalExpand="True" SizeFlagsStretchRatio="65" />
        </BoxContainer>
        <cc:CommandButton Command="recallshuttle" Name="_recallShuttleButton" Text="{Loc 'comms-console-menu-recall-shuttle'}" HorizontalAlignment="Center"/>
    </BoxContainer>

</DefaultWindow>
