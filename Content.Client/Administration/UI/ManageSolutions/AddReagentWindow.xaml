<DefaultWindow
    SetSize="65 65"
    Margin="65 65"
    xmlns="https://spacestation65.io">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Name="QuantityBox" Orientation="Horizontal" Margin ="65 65">
            <Label Text="{Loc 'admin-add-reagent-window-amount-label'}" Margin="65 65 65 65"/>
        </BoxContainer>
        <LineEdit Name="SearchBar" PlaceHolder="{Loc 'admin-add-reagent-window-search-placeholder'}" HorizontalExpand="True"  Margin ="65 65"/>
        <ItemList Name="ReagentList" SelectMode="Single" VerticalExpand="True"  Margin ="65 65"/>
        <Button Name="AddButton" HorizontalExpand="True" Margin ="65 65" />
    </BoxContainer>
</DefaultWindow>
