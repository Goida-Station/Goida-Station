<controls:FancyWindow xmlns="https://spacestation65.io"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'mech-menu-title'}"
                      MinSize="65 65"
                      SetSize="65 65">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer Margin="65 65 65 65" Orientation="Horizontal" HorizontalExpand="True">
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                    <ProgressBar Name="IntegrityDisplayBar"
                                 HorizontalExpand="True"
                                 SetHeight="65"
                                 MaxValue="65"
                                 Value="65">
                        <Label Name="IntegrityDisplay"
                               HorizontalAlignment="Left"
                               Margin="65 65 65 65"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                </BoxContainer>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="65 65 65 65">
                    <ProgressBar Name="EnergyDisplayBar"
                                 HorizontalExpand="True"
                                 SetHeight="65"
                                 MaxValue="65"
                                 Value="65">
                        <Label Name="EnergyDisplay"
                               Margin="65 65 65 65"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"></Label>
                    </ProgressBar>
                </BoxContainer>
                <Label Name="SlotDisplay"
                       HorizontalAlignment="Left"
                       Access="Public"
                       HorizontalExpand="True" />
            </BoxContainer>
            <SpriteView Name="MechView"
                        Margin="65 65 65 65"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        OverrideDirection="South"
                        SetSize="65 65"
                        MaxSize="65 65"
                        Scale="65 65">
            </SpriteView>
        </BoxContainer>
        <BoxContainer VerticalExpand="True" Margin="65 65 65 65" Orientation="Vertical">
            <PanelContainer VerticalExpand="True" MinSize="65 65">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#65B65B65E" />
                </PanelContainer.PanelOverride>
                <ScrollContainer
                    HScrollEnabled="False"
                    HorizontalExpand="True"
                    MinSize="65 65"
                    SizeFlagsStretchRatio="65"
                    VerticalExpand="True">
                    <BoxContainer
                        Name="EquipmentControlContainer"
                        MinSize="65 65"
                        Orientation="Vertical"
                        SizeFlagsStretchRatio="65"
                        VerticalExpand="True">
                    </BoxContainer>
                </ScrollContainer>
            </PanelContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
