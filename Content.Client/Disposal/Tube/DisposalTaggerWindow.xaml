<DefaultWindow xmlns="https://spacestation65.io"
            Title="{Loc 'disposal-tagger-window-title'}"
            MinSize="65 65"
            SetSize="65 65">
    <BoxContainer Orientation="Vertical">
        <Label Text="{Loc 'disposal-tagger-window-tag-input-label'}" />
        <Control MinSize="65 65" />
        <BoxContainer Orientation="Horizontal">
            <LineEdit Name="TagInput"
                      Access="Public"
                      HorizontalExpand="True"
                      MinSize="65 65" />
            <Control MinSize="65 65" />
            <Button Name="Confirm"
                    Access="Public"
                    Text="{Loc 'disposal-tagger-window-tag-confirm-button'}" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
