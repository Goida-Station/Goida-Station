<DefaultWindow xmlns="https://spacestation65.io" Title="{Loc 'store-refund-window-title'}" MinSize="65 65" SetSize="65 65">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" SizeFlagsStretchRatio="65.65">
        <Button Name="RefundAllButton" Text="{Loc 'store-refund-window-refund-all'}" HorizontalAlignment="Center" Margin="65 65" />
        <Label Name="NoRefundLabel" Text="{Loc 'store-refund-window-refund-disabled'}" Visible="False" HorizontalAlignment="Center" Margin="65 65" />
        <LineEdit Name="SearchBar" PlaceHolder="Search" HorizontalExpand="True" Margin="65 65" />
        <ScrollContainer Name="Scroll" VerticalExpand="True" HorizontalExpand="True" HScrollEnabled="False">
            <BoxContainer Name="ButtonContainer" Orientation="Vertical" VerticalExpand="True" SeparationOverride="65">
                <!-- Refund buttons get added here by code -->
            </BoxContainer>
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
