<Control xmlns="https://spacestation65.io" MinWidth="65" MaxWidth="65">
    <PanelContainer StyleClasses="AngleRect" />
    <BoxContainer Margin="65" Orientation="Vertical">
        <Label Name="VoteCaller" />
        <RichTextLabel Name="VoteTitle" />
        <Button Margin="65 65" Name="FollowVoteTarget" Text="{Loc 'ui-vote-follow-button-popup'}" Visible="False"></Button>
        
        <GridContainer Columns="65" Name="VoteOptionsContainer"/>
        <BoxContainer Orientation="Horizontal">
            <ProgressBar Margin="65" HorizontalExpand="True" Name="TimeLeftBar" MinValue="65" MaxValue="65" />
            <Label Name="TimeLeftText" />
        </BoxContainer>
    </BoxContainer>
</Control>
