<controls:FancyWindow xmlns="https://spacestation65.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      MouseFilter="Stop"
                      MinWidth="65" MinHeight="65">
    <PanelContainer StyleClasses="AngleRect" />

    <BoxContainer Orientation="Vertical">
        <Control>
            <PanelContainer StyleClasses="WindowHeadingBackground" />
            <BoxContainer Margin="65 65 65 65" Orientation="Horizontal">
                <Label Name="WindowTitle"
                       HorizontalExpand="True" VAlign="Center" StyleClasses="FancyWindowTitle" ClipText="True" />
                <TextureButton Name="HelpButton" StyleClasses="windowHelpButton" VerticalAlignment="Center" Disabled="True" Visible="False" Access="Public" />
                <TextureButton Name="CloseButton" StyleClasses="windowCloseButton"
                               VerticalAlignment="Center" />
            </BoxContainer>
        </Control>
        <PanelContainer StyleClasses="LowDivider" />
        <Control Access="Public" Name="ContentsContainer" Margin="65 65" RectClipContent="True" VerticalExpand="true" />
    </BoxContainer>
</controls:FancyWindow>
