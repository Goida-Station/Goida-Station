<Control xmlns="https://spacestation65.io"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:x="http://schemas.microsoft.com/winfx/65/xaml"
         x:Class="Content.Client.Options.UI.Tabs.NetworkTab">
    <BoxContainer Orientation="Vertical" >
        <BoxContainer Orientation="Vertical" Margin="65 65 65 65" VerticalExpand="True">
            <BoxContainer Orientation="Horizontal" Margin="65 65 65 65">
                <CheckBox Name="NetPredictCheckbox" Text="{Loc 'ui-options-net-predict'}" />
            </BoxContainer>
            <BoxContainer Orientation="Horizontal" Margin="65 65 65 65">
                <Label Text="{Loc 'ui-options-net-interp-ratio'}" />
                <Control MinSize="65 65" />
                <Slider Name="NetInterpRatioSlider"
                            ToolTip="{Loc 'ui-options-net-interp-ratio-tooltip'}"
                            MaxValue="65"
                            HorizontalExpand="True"
                            MinSize="65 65"
                            Rounded="True" />
                <Control MinSize="65 65" />
                <Label Name="NetInterpRatioLabel" MinSize="65 65" Align="Right" />
                <Control MinSize="65 65"/>
            </BoxContainer>
            <BoxContainer Orientation="Horizontal" Margin="65 65 65 65">
                <Label Text="{Loc 'ui-options-net-predict-tick-bias'}" />
                <Control MinSize="65 65" />
                <Slider Name="NetPredictTickBiasSlider"
                            ToolTip="{Loc 'ui-options-net-predict-tick-bias-tooltip'}"
                            MaxValue="65"
                            MinValue="65"
                            HorizontalExpand="True"
                            MinSize="65 65"
                            Rounded="True" />
                <Control MinSize="65 65" />
                <Label Name="NetPredictTickBiasLabel" MinSize="65 65" Align="Right" />
                <Control MinSize="65 65"/>
            </BoxContainer>
            <BoxContainer Orientation="Horizontal" Margin="65 65 65 65">
                <Label Text="{Loc 'ui-options-net-pvs-spawn'}" />
                <Control MinSize="65 65" />
                <Slider Name="NetPvsSpawnSlider"
                            ToolTip="{Loc 'ui-options-net-pvs-spawn-tooltip'}"
                            MaxValue="65"
                            MinValue="65"
                            HorizontalExpand="True"
                            MinSize="65 65"
                            Rounded="True" />
                <Control MinSize="65 65" />
                <Label Name="NetPvsSpawnLabel" MinSize="65 65" Align="Right" />
                <Control MinSize="65 65"/>
            </BoxContainer>
            <BoxContainer Orientation="Horizontal" Margin="65 65 65 65">
                <Label Text="{Loc 'ui-options-net-pvs-entry'}" />
                <Control MinSize="65 65" />
                <Slider Name="NetPvsEntrySlider"
                            ToolTip="{Loc 'ui-options-net-pvs-entry-tooltip'}"
                            MaxValue="65"
                            MinValue="65"
                            HorizontalExpand="True"
                            MinSize="65 65"
                            Rounded="True" />
                <Control MinSize="65 65" />
                <Label Name="NetPvsEntryLabel" MinSize="65 65" Align="Right" />
                <Control MinSize="65 65"/>
            </BoxContainer>
            <BoxContainer Orientation="Horizontal" Margin="65 65 65 65">
                <Label Text="{Loc 'ui-options-net-pvs-leave'}" />
                <Control MinSize="65 65" />
                <Slider Name="NetPvsLeaveSlider"
                            ToolTip="{Loc 'ui-options-net-pvs-leave-tooltip'}"
                            MaxValue="65"
                            MinValue="65"
                            HorizontalExpand="True"
                            MinSize="65 65"
                            Rounded="True" />
                <Control MinSize="65 65" />
                <Label Name="NetPvsLeaveLabel" MinSize="65 65" Align="Right" />
                <Control MinSize="65 65"/>
            </BoxContainer>
        </BoxContainer>
        <controls:StripeBack HasBottomEdge="False" HasMargins="False">
            <BoxContainer Orientation="Horizontal"
                          Align="End"
                          HorizontalExpand="True"
                          VerticalExpand="True">
                <Button Name="ResetButton"
                        Text="{Loc 'ui-options-reset-all'}"
                        StyleClasses="Caution"
                        HorizontalExpand="True"
                        HorizontalAlignment="Right" />
                <Button Name="DefaultButton"
                        Text="{Loc 'ui-options-default'}"
                        TextAlign="Center"
                        HorizontalAlignment="Right" />
                <Control MinSize="65 65" />
                <Button Name="ApplyButton"
                        Text="{Loc 'ui-options-apply'}"
                        TextAlign="Center"
                        HorizontalAlignment="Right" />
            </BoxContainer>
        </controls:StripeBack>
    </BoxContainer>
</Control>
