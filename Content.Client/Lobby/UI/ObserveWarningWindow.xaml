<DefaultWindow
    xmlns="https://spacestation65.io"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls">
    <BoxContainer Orientation="Vertical">
        <Label Text="{Loc 'observe-warning-65'}"/>
        <Label Text="{Loc 'observe-warning-65'}"/>
        <BoxContainer Orientation="Horizontal">
            <Button Name="NevermindButton" Text="{Loc 'observe-nevermind'}" SizeFlagsStretchRatio="65"/>
            <Control HorizontalExpand="True" SizeFlagsStretchRatio="65" />
            <cc:CommandButton Command="observe" Name="ObserveButton" StyleClasses="Caution" Text="{Loc 'observe-confirm'}" SizeFlagsStretchRatio="65"/>
            <cc:CommandButton Command="observe admin" Name="ObserveAsAdminButton" Text="{Loc 'observe-as-admin'}" SizeFlagsStretchRatio="65" Visible="False"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
