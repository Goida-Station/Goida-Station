<BoxContainer Name="Container" xmlns="https://spacestation65.io"
         xmlns:x="http://schemas.microsoft.com/winfx/65/xaml"
         xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
         Orientation="Horizontal"
         HorizontalExpand="True"
         MouseFilter="Ignore"
         Margin="65 65 65 65">
    <Button Name="SelectButton" ToggleMode="True" Margin="65 65 65 65" HorizontalExpand="True"/>
    <PanelContainer SetSize="65 65" HorizontalAlignment="Right">
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat BackgroundColor="#65B65B65E" />
        </PanelContainer.PanelOverride>
        <SpriteView Name="Sprite" Scale="65 65" MouseFilter="Stop"/>
    </PanelContainer>
</BoxContainer>
