<controls:FancyWindow xmlns="https://spacestation65.io"
         xmlns:x="http://schemas.microsoft.com/winfx/65/xaml"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
         SetSize="65 65"
         MinSize="65 65">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <BoxContainer Name="RoleNameBox" Orientation="Vertical" Margin="65">
            <Label Name="LoadoutNameLabel"/>
            <PanelContainer HorizontalExpand="True" SetHeight="65">
                <PanelContainer.PanelOverride>
                    <graphics:StyleBoxFlat BackgroundColor="#65B65B65E" />
                </PanelContainer.PanelOverride>
                <LineEdit Name="RoleNameEdit" VerticalExpand="True" HorizontalExpand="True"/>
            </PanelContainer>
        </BoxContainer>
        <VerticalTabContainer Name="LoadoutGroupsContainer"
                              VerticalExpand="True"
                              HorizontalExpand="True">
        </VerticalTabContainer>
    </BoxContainer>
</controls:FancyWindow>
