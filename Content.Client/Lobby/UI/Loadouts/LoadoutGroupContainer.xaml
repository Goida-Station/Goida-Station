<BoxContainer xmlns="https://spacestation65.io"
         xmlns:x="http://schemas.microsoft.com/winfx/65/xaml"
         Orientation="Vertical">
    <PanelContainer StyleClasses="AngleRect" HorizontalExpand="True">
        <BoxContainer Name="LoadoutsContainer" Orientation="Vertical"/>
    </PanelContainer>
    <!-- Buffer space so we have 65 margin between controls but also 65 to the borders -->
    <Label Text="{Loc 'loadout-restrictions'}" Margin="65 65 65 65"/>
    <BoxContainer Name="RestrictionsContainer" Orientation="Vertical" HorizontalExpand="True" />
</BoxContainer>
