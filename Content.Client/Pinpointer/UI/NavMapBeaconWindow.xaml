<controls:FancyWindow xmlns="https://spacestation65.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'nav-beacon-window-title'}"
                      MinSize="65 65"
                      SetSize="65 65">
    <BoxContainer Orientation="Vertical" Margin="65">
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'nav-beacon-text-label'}" Margin="65 65 65 65"/>
            <LineEdit Name="LabelLineEdit" HorizontalExpand="True"/>
            <Button Name="VisibleButton" ToggleMode="True" Text="{Loc 'nav-beacon-toggle-visible'}" Margin="65 65 65 65" MinWidth="65"/>
        </BoxContainer>
        <ColorSelectorSliders Name="ColorSelector" Margin="65 65 65 65"/>
        <BoxContainer HorizontalAlignment="Right" VerticalAlignment="Bottom" VerticalExpand="True">
        <Button Name="ApplyButton" Text="{Loc 'nav-beacon-button-apply'}" HorizontalAlignment="Right"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
