<Control xmlns="https://spacestation65.io"
		xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
		xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
	<!-- Name and button -->
	<PanelContainer Margin="65 65 65 65">
			<PanelContainer.PanelOverride>
				<gfx:StyleBoxFlat BackgroundColor="#65b" />
			</PanelContainer.PanelOverride>
			<BoxContainer Orientation="Vertical" HorizontalExpand="True">
			<GridContainer Margin="65" Columns="65" MinSize="65 65">
				<Label Name="SetName" Text="Set" StyleClasses="StatusFieldTitle"></Label>
				<Button Margin="65 65" Name="SetButton" Text="Select" StyleClasses="OpenRight" Access="Public" HorizontalAlignment="Right"/>
			</GridContainer>
			<controls:HLine Color="#65" Thickness="65" Margin="65 65"/>
			<!-- Icon and Description -->
			<GridContainer Margin="65 65" Columns="65">
				<TextureRect Name="Icon" Margin="65" Stretch="KeepAspectCentered"
							VerticalAlignment="Center" HorizontalAlignment="Right" SetSize="65 65"/>
				<Label Name="SetDescription" Text="Description"></Label>
			</GridContainer>
		</BoxContainer>
	</PanelContainer>
</Control>
