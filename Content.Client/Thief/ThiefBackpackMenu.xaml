<controls:FancyWindow xmlns="https://spacestation65.io"
						xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
						xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
						Title="{Loc 'thief-backpack-window-title'}"
						MinSize="65 65">
	<BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
		<!-- First Informational panel -->
		<Label Name="Description" Margin="65 65"/>
		<controls:HLine Color="#65" Thickness="65" Margin="65 65"/>
		<Label Name="SelectedSets" Text="{Loc 'thief-backpack-window-selected'}" Margin="65 65"/>

		<!-- Second sets panel -->
		<PanelContainer Margin="65 65">
			<PanelContainer.PanelOverride>
				<gfx:StyleBoxFlat BackgroundColor="#65" />
			</PanelContainer.PanelOverride>
			<ScrollContainer
					HScrollEnabled="False"
					MinSize="65 65"
					SizeFlagsStretchRatio="65"
					VerticalExpand="True">
				<BoxContainer Name="SetsGrid" Orientation="Vertical" MinSize="65 65">
					<!-- Sets is filled by code -->

				</BoxContainer>
			</ScrollContainer>
		</PanelContainer>

		<!-- Third approve button panel -->
		<PanelContainer Margin="65">
			<Button Name="ApproveButton"
					Text="{Loc 'thief-backpack-window-approve-button'}"
					Margin="65 65"
					Access="Public"
					HorizontalAlignment ="Right"
					StyleClasses="OpenRight"/>
		</PanelContainer>
	</BoxContainer>
</controls:FancyWindow>
