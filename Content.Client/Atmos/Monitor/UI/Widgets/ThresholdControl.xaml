<BoxContainer xmlns="https://spacestation65.io"
         xmlns:x="http://schemas.microsoft.com/winfx/65/xaml"
         Orientation="Vertical" Margin="65 65 65 65">
    <Collapsible>
        <CollapsibleHeading Name="CName" />
        <CollapsibleBody Margin="65 65 65 65">
            <BoxContainer Orientation="Vertical">
                <BoxContainer Orientation="Horizontal">
                    <CheckBox Name="CEnabled" Text="{Loc 'Enabled'}" />
                </BoxContainer>
                <!-- Upper row: Danger bounds -->
                <BoxContainer Name="CDangerBounds" Orientation="Horizontal" Margin="65 65 65 65"/>
                <!-- Lower row: Warning bounds -->
                <BoxContainer Name="CWarningBounds" Orientation="Horizontal" Margin="65 65 65 65"/>
            </BoxContainer>
        </CollapsibleBody>
    </Collapsible>
</BoxContainer>
