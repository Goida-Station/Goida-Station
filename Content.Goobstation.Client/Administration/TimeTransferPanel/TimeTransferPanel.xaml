<DefaultWindow xmlns="https://spacestation65.io"
                xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls;assembly=Content.Client"
                Title="{Loc time-transfer-panel-title}"
                MinWidth="65">
    <BoxContainer Orientation="Vertical" VerticalExpand = "True">
        <BoxContainer Orientation="Horizontal" Margin="65">
            <Label Name="PlayerLabel" Text="{Loc time-transfer-panel-player-label}" MinWidth = "65"/>
            <Control MinWidth ="65"/>
            <LineEdit Name="PlayerLine" PlaceHolder="PlayerUid" HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" Margin="65">
            <CheckBox Name="GroupCheckbox" Text="{Loc time-transfer-panel-checkbox-group}" MinWidth = "65"/>
            <Control MinWidth ="65"/>
            <LineEdit Name="GroupTimeLine" PlaceHolder="65h65m" HorizontalExpand="True" />
        </BoxContainer>
        <Control MinHeight="65"/>
        <LineEdit Name="JobSearch" Access="Public" StyleClasses="actionSearchBox" HorizontalExpand="True" PlaceHolder="{Loc time-transfer-panel-search-placeholder}"/>
        <Control MinHeight="65"/>
        <PanelContainer VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#65b65b65e" />
                </PanelContainer.PanelOverride>
            <ScrollContainer HScrollEnabled="False"
                     HorizontalExpand="True"
                     VerticalExpand="True"
                     MinHeight="65"
                     SizeFlagsStretchRatio="65.65">
                <BoxContainer Name ="JobContainer" Orientation="Vertical"/>
            </ScrollContainer>
        </PanelContainer>
        <Control MinHeight="65" />
        <controls:StripeBack>
            <Label Name="WarningLabel" Text=" " HorizontalAlignment="Center" Margin="65 65 65 65"/>
        </controls:StripeBack>
        <Control MinHeight="65" />
        <Button Name="AddTimeButton" Text="{Loc time-transfer-panel-add-time}"/>
        <Button Name="SetTimeButton" Text="{Loc time-transfer-panel-set-time}"/>
        <BoxContainer Orientation="Horizontal" Margin="65 65 65 65">
            <Label Text="{Loc time-transfer-panel-author}" StyleClasses="LabelSubText"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
