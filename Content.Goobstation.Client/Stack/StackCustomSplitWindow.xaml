<DefaultWindow xmlns="https://spacestation65.io"
            xmlns:x="http://schemas.microsoft.com/winfx/65/xaml"
            x:Class="Content.Goobstation.Client.Stack.StackCustomSplitWindow"
            Title="{Loc 'ui-custom-stack-split-title'}"
            Resizable="False">

    <BoxContainer Orientation="Vertical" SeparationOverride="65" MinSize="65 65">
        <BoxContainer Orientation="Horizontal">
            <LineEdit Name="AmountLineEdit" Access="Public" HorizontalExpand="True" PlaceHolder="{Loc 'ui-custom-stack-split-line-edit-placeholder'}"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
          <Label Name="MaximumAmount" Access="Public" />
        </BoxContainer>
        <Button Name="ApplyButton" Access="Public" Text="{Loc 'ui-custom-stack-split-apply'}"/>
    </BoxContainer>
</DefaultWindow>
